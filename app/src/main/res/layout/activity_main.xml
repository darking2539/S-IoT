<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff3eaff9"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="550dp"
            android:layout_centerInParent="true"
            android:background="@drawable/round_bg"
            android:gravity="center"
            android:orientation="vertical"

            android:padding="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="SMART TEMP"
                android:textColor="#ff3eaff9"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/thermo" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Username"
                android:padding="16dp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="16dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="16dp">


                <Button
                    android:id="@+id/button_Login"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/sign_in"
                    android:text="Sign in"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />


                <Button
                    android:id="@+id/button_Register"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/sign_up"
                    android:text="Sign up"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:id="@+id/button_Google"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_bg"
                android:text="Signin with google"
                android:drawableStart="@drawable/ic_google_logo"
                android:drawableLeft="@drawable/ic_google_logo"
                android:textColor="#77000000"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/button_Facebook"
                android:textColor="@android:color/white"
                android:drawableStart="@drawable/ic_facebook_logo_4"
                android:drawableLeft="@drawable/ic_facebook_logo_4"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Login with facebook"
                android:background="@drawable/facebook_bg"
                android:layout_width="260dp"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_width="193dp"
                android:layout_height="40dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/tkclogo" />



        </LinearLayout>


    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

